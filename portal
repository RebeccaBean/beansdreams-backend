  <link rel="stylesheet" href="css/nav.css" />

  <!-- AOS for scroll animations -->
  <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />

  <!-- Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Alex+Brush&family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">
</head>
<body>
  <!-- NAV placeholder -->
  <div id="nav-placeholder"></div>

  <!-- Portal Hero -->
  <section class="portal-container" data-aos="fade-right">
    <div class="butterfly-container">
      <img src="images/butterfly-logo.png" alt="Butterfly Logo" class="butterfly">
    </div>
    <h1 class="alex-brush">Bean's Dreams</h1>
    <p class="tagline">Guiding your journey to healing, creativity, and growth.</p>
    <p class="redirect-text">Redirecting to your student portal...</p>
  </section>

  <!-- Scripts -->
  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
  <script src="js/nav.js" defer></script>
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      AOS.init({ duration: 700, easing: 'ease-out-quart', once: true });
     
      // Load navigation from partial
      fetch("navigation.html")
        .then(r => r.text())
        .then(html => {
          const el = document.getElementById("nav-placeholder");
          if (el) el.innerHTML = html;
        })
        .catch(() => { /* silently fail if not present */ });

      // Auto redirect after 8 seconds
      setTimeout(() => {
        window.location.href = "https://studio-1285160814-4d0a2.firebaseio.com"; 
        // replace with your Firebase hosting URL
      }, 8000);
    });
  </script>
